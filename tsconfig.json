{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5", // TSはECMAScript 5に変換
      "module": "es2015", // TSのモジュールはES Modulesとして出力
      "strict": true,
      "jsx": "react",
      "moduleResolution": "node",
      "lib": [
        "es2020",
        "dom"
      ],
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
    }
}